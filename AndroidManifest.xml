<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexuspad"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <permission
        android:name="com.nexuspad.core.permission.LISTEN_ENTRY_CHANGES"
        android:protectionLevel="signature" />
    <permission
        android:name="com.nexuspad.core.permission.LISTEN_FOLDER_CHANGES"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.nexuspad.core.permission.LISTEN_ENTRY_CHANGES" />
    <uses-permission android:name="com.nexuspad.core.permission.LISTEN_FOLDER_CHANGES" />

    <application
        android:name="com.nexuspad.app.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
            android:name="com.nexuspad.photos.service.PhotoUploadService"
            android:exported="false"></service>

        <activity
            android:name="com.nexuspad.home.ui.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nexuspad.home.ui.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" />
        <activity
            android:name="com.nexuspad.home.ui.activity.DashboardActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.nexuspad.about.activity.AboutActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.nexuspad.bookmark.ui.activity.BookmarkActivity"
            android:label="@string/bookmark" />
        <activity
            android:name="com.nexuspad.bookmark.ui.activity.BookmarksActivity"
            android:label="@string/bookmarks" />
        <activity
            android:name="com.nexuspad.bookmark.ui.activity.NewBookmarkActivity"
            android:exported="true"
            android:label="@string/bookmark">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nexuspad.doc.ui.activity.DocActivity"
            android:label="@string/docs" />
        <activity
            android:name="com.nexuspad.doc.ui.activity.DocsActivity"
            android:label="@string/docs" />
        <activity
            android:name="com.nexuspad.doc.ui.activity.NewDocActivity"
            android:label="@string/docs" />
        <activity
            android:name="com.nexuspad.journal.ui.activity.JournalActivity"
            android:label="@string/journal" />
        <activity
            android:name="com.nexuspad.photos.ui.activity.PhotosActivity"
            android:label="@string/photos" />
        <activity
            android:name="com.nexuspad.photos.ui.activity.PhotoActivity"
            android:label="@string/photos"
            android:theme="@style/Transparent" />
        <activity
            android:name="com.nexuspad.photos.ui.activity.PhotosSelectActivity"
            android:label="@string/photos" />
        <activity
            android:name="com.nexuspad.photos.ui.activity.PhotosUploadActivity"
            android:label="@string/photos_upload">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nexuspad.photos.ui.activity.AlbumActivity"
            android:label="@string/photos" />
        <activity
            android:name="com.nexuspad.photos.ui.activity.NewAlbumActivity"
            android:label="@string/new_album" />

        <activity
            android:name="com.nexuspad.contacts.ui.activity.ContactsActivity"
            android:label="@string/contacts" />
        <activity
            android:name=".contacts.ui.activity.ContactActivity"
            android:label="@string/contacts" />
        <activity
            android:name=".contacts.ui.activity.NewContactActivity"
            android:label="@string/contacts" />
        <activity
            android:name=".contacts.ui.activity.NewLocationActivity"
            android:label="@string/contacts" />
        <activity
            android:name="com.nexuspad.ui.activity.NewFolderActivity"
            android:label="@string/new_folder" />
        <activity
            android:name="com.nexuspad.ui.activity.FoldersActivity"
            android:label="@string/folders" />
    </application>

</manifest>