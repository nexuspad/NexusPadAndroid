<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:clipChildren="true"
        android:alwaysDrawnWithCache="true"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/photo_grid_column_width"
        android:stretchMode="spacingWidthUniform"
        android:background="@android:color/white"
        android:drawSelectorOnTop="true"
        android:listSelector="?attr/selectableItemBackground"/>

    <FrameLayout
        android:id="@+id/sticky"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#7F000000">

        <TextView
            android:id="@+id/lbl_folder"
            style="@style/selectableTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_np_folder"
            android:drawablePadding="@dimen/ed__padding_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="#FFFF"
            android:text="@string/root"
            android:textSize="@dimen/ed__textsize_medium"/>
    </FrameLayout>
</RelativeLayout>