<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/np_padding_small"
    android:orientation="vertical">

    <include layout="@layout/album_new" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pick_img"
            android:padding="@dimen/np_padding_small"
            android:drawableLeft="@drawable/photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/add_more"
            android:gravity="center_vertical"
            style="@style/selectableTextView" />

        <TextView
            android:id="@+id/lbl_num_photos"
            android:padding="@dimen/np_padding_small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/add_more"
            android:gravity="center_vertical|right" />
    </LinearLayout>

    <include
        layout="@layout/photo_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>